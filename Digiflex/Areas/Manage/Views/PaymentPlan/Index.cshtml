@model List<PaymentPlan>

@{
    int counter = 0;
}
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <h1>Payment Plans</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PaymentPlan plan in Model)
                    {
                        counter++;
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@plan.Title</td>
                            <td>
                                <a asp-action="update" asp-controller="paymentplan" asp-route-id="@plan.Id" class="btn btn-outline-primary">Update</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>