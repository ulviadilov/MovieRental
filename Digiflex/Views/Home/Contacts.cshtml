@model List<Contact>
    <header class="page-header">
        <div class="container">
            <h1>Contact</h1>
        </div>
    </header>
    <!-- end page-header -->
    <main>
        <section class="content-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <h6>CONNECT WITH US</h6>
                            <h2>Get in Touch</h2>
                        </div>
                        <!-- end section-title -->
                    </div>
                    <!-- end col-12 -->
                    @foreach (Contact contact in Model)
                {
                    <div class="col-lg-4">
                        <div class="contact-box">
                            <figure>
                                <img src="~/uploads/contact/@contact.IconUrl" alt="Image">
                            </figure>
                            <h5>@contact.Title</h5>
                            <p>
                                @contact.Description
                            </p>

                        </div>
                        <!-- end contact-box -->
                    </div>

                }
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </section>
        <!-- end content-section -->
        
