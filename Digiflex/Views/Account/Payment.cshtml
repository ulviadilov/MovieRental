@model PaymentViewModel

</section>
<header class="page-header">
    <div class="container">
        <h1>Payment</h1>
    </div>
</header>
<!-- end page-header -->
<main>
    <section class="content-section" data-background="images/section-pattern01.png">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="membership">
                        <h6>Payment</h6>
                        <form asp-action="payment" asp-controller="account" method="post">
                            <!-- end form-group -->
                            <div class="form-group">
                                <label asp-for="FirstName">Firstname</label>
                                <input maxlength="30" asp-for=FirstName class="mb-0 form-control" placeholder="Firstname">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName">Lastname</label>
                                <input maxlength="30" asp-for=LastName class="mb-0 form-control" placeholder="Lastname">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CardNumber">Card number</label>
                                <input maxlength="16" asp-for=CardNumber class="mb-0 form-control"
                                       placeholder="Card number">
                                <span asp-validation-for="CardNumber" class="text-danger"></span>
                            </div>
                            <!-- end form-group -->
                            <div class="form-group">
                                <label asp-for="ExpireMonth">Expire Month</label>
                                <input maxlength="2" asp-for=ExpireMonth class="mb-0 form-control" placeholder="Month">
                                <span asp-validation-for="ExpireMonth" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ExpireYear">Expire Year</label>
                                <input maxlength="2" asp-for=ExpireYear class="mb-0 form-control" placeholder="Year">
                                <span asp-validation-for="ExpireYear" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CCV">CCV</label>
                                <input maxlength="3" asp-for=CCV class="mb-0 form-control" placeholder="CCV">
                                <span asp-validation-for="CCV" class="text-danger"></span>
                            </div>

                            <!-- end form-group -->
                            <div class="form-group">
                                <input type="submit" value="START MEMBERSHIP">
                            </div>
                            <!-- end form-group -->
                        </form>
                    </div>
                    <!-- end membership -->
                </div>
                <!-- end col-7 -->
                <div class="col-lg-5">
                    <figure class="side-image">
                        <img src="~/assets/images/cinema-movie-time-concept-show-seats-popcorn-filmstrip-tickets-theater-object-curtain-background-vintage-retro-colors-103014181.jpg" alt="Image">

                    </figure>
                    <!-- end side-image -->
                </div>
                <!-- end col-5 -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>
